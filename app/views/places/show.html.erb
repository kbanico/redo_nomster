<div class="row">
 <div class="booyah-box col-12 col-md-10 offset-md-1">
  <h1 class="text-green"><%=  @place.name %></h1>
  <br/>
  <i><%= @place.address %></i>
  <br/><br/>
  <p><%= @place.description %></p>

   <% if @place.latitude.present? && @place.longitude.present? %>
    <script>
  function initMap() {
      var myLatLng = {lat: <%= @place.latitude %>, lng: <%= @place.longitude %>};
      var map = new google.maps.Map(document.getElementById('map'), {
        zoom: 12,
        center: myLatLng
      });
      var marker = new google.maps.Marker({
        position: myLatLng,
        map: map,
        title: 'Hello World!'
      });
  }
    </script>
  <!--   <script async defer
        src="https://maps.googleapis.com/maps/api/js?signed_in=true&callback=initMap"></script> -->

    <script async defer
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCF2a9CpHY3BmC7iz2j8Oe3ivMig9U0EA0&callback=initMap">
    </script>

    <div id="map"></div>
   <% end %>

   <br />

  <div class="pull-left">
    <% if @place.categories.any? %>
      <br>
        <p>Categories</p>
        <%= render @place.categories %>
      <% end %>
  </div>


  <div class="pull-right">
    <% if current_user %>
      <button class="btn btn-success" data-toggle="modal" data-target="#myModal">
        Add a rating
      </button>
      <button class="btn btn-success" data-toggle="modal" data-target="#photoModal">
        Add your photo
      </button>
    <% end %>


      <% if current_user && current_user== @place.user %>
        <%= link_to 'Edit', edit_place_path(@place), :class => 'btn btn-success' %>
        <%= link_to 'Delete', place_path(@place), :method => :delete, :data => {:confirm => 'Are you sure you want to delete this?'},:class => 'btn btn-danger' %>
      <% end %>

  </div>
 </div>
</div>

<!-- Model for Photos -->
<div class="modal fade" id="photoModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">×</span>
        </button>
        <h4 class="modal-title" id="myModalLabel">Add your photo</h4>
      </div>
    <%= simple_form_for @photo, url: place_photos_path(@place) do |f| %>

      <div class="modal-body">


        <%= f.input :picture %>
        <%= f.input :caption %>


      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <%= f.submit "Add photo", class: "btn btn-primary" %>
      </div>
    <% end %>

    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">×</span>
        </button>
        <h4 class="modal-title" id="myModalLabel">Add a comment</h4>
      </div>
    <%= simple_form_for @comment, url: place_comments_path(@place), validate: true do |f| %>

      <div class="modal-body">

        <%= f.input :message %>
        <%= f.input :rating, as: :select, collection: Comment::RATINGS %>


      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <%= f.submit "Add a Comment", class: "btn btn-primary" %>
      </div>
    <% end %>

    </div>
  </div>
</div>




<div class="booyah-box col-12 col-md-10 offset-md-1">
  <h3 class="text-center">Rating</h3>
  <div class="row">
    <% if @place.comments.present? %>
      <% @place.comments.each do |comment| %>
        <div class="col-12 col-sm-6">
          <blockquote>
            <% if comment.humanized_rating.present? %>
              <b><%= comment.humanized_rating %></b> -
            <% end %>
            <%= comment.message %>
            <small>by: <i><%= comment.user.username %></i></small>
          </blockquote>
        </div>
      <% end %>
    <% else %>

  </div>
    <br>
     <p class="text-center">Currently No Ratings Yet</p>
    <% end %>
</div>

<% @place.photos.each do |photo| %>
<div class="posts-wrapper">
    <div class="posts">
        <div class="post-head">
            <div class="thumb-img">

            </div>
            <div class="user-name">
                Photo By: <%= photo.user.username %>
            </div>
            <div class="time-ago">
                added <%= time_ago_in_words(photo.created_at) %> ago
            </div>
        </div>
        <div class="image center-block">
            <%= image_tag photo.picture, class: "img-fluid" %>

        </div>
        <div class="post-bottom">
            <div class="caption">
                <div class="caption-content">
                    <div class="user-name">
                        <%= photo.user.username %>
                    </div>
                    <%= photo.caption %>
                </div>

            </div>

        </div>
        <div class="comment-like-form row">
            <div class="like-button col-sm-1">
                <span class="glyphicon glyphicon-heart-empty"></span>
            </div>

        </div>
    </div>
</div>
<% end %>




