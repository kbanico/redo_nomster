  <div class="col-lg-3 col-md-4 col-sm-6 place-index">
      <article class="card">
      <header class="title-header">
        <h3><%=place.name%></h3>
      </header>
      <div class="card-block">
        <div class="img-card">
          <img src="https://placehold.it/300x250" alt="place" class="w-100" />
        </div>
        <p class="tagline card-text text-xs-center"><%= place.description %></p>
        <p class="tagline card-text text-xs-center"><%= place.address %></p>
        <%= link_to place_path(place), class: "btn btn-outline-info btn-sm" do %>
          <i class="fa fa-eye"></i> Read More
        <% end %>


      <% if place.categories.any? %>
      <br>
        <p>Categories</p>
        <%= render place.categories %>
      <% end %>
      <br>
      <% if place.user%>
        <small>Posted By: <%=place.user.username %></small>
      <% end %>

      <br><small>Lastest Comment:</small> <br>
      <% if place.comments.present? %>
        <% if place.comments.last.humanized_rating.present? %>
          <b><%= place.comments.last.humanized_rating %></b> -
        <% end %>
        <%= place.comments.last.message %>
        <small><%= place.comments.last.user.username %></small>
      <% end %>

      </div>


    </article>
  </div>



<% end %>
</div>

<div class="text-center">
  <%= will_paginate @places %>
</div>
