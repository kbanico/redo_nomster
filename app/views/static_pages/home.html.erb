<div class="row">
<% @places.each do |place| %>

  <div class="col-lg-3 col-md-4 col-sm-6 place-index">
      <article class="card">
      <header class="title-header">
      <br>
        <h3 class="text-center"><%=place.name%></h3>
      </header>
      <div class="card-block">
        <div class="img-card">
         <% if place.photos.present? %>
         <%= link_to place_path(place) do %>
          <%= image_tag place.photos.last.picture, class: "img-fluid" %>
         <% end %>


         <% end %>

        </div>
        <p class="tagline card-text text-xs-center"><%= place.description.truncate(50) %></p>
        <p class="tagline card-text text-xs-center"><i><%= place.address %></i></p>
        <%= link_to place_path(place), class: "btn btn-outline-info btn-sm" do %>
          <i class="fa fa-eye"></i> Read More
        <% end %>


      <% if place.categories.any? %>
      <br>
        <p>Categories</p>
        <%= render place.categories %>
      <% end %>
      <br>
      <% if place.user%>
        <small>Posted By: <%=place.user.username %></small>
      <% end %>
      <% if place.comments.present? %>
      <br><small>Lastest Comment:</small> <br>

        <% if place.comments.last.humanized_rating.present? %>
          <b><%= place.comments.last.humanized_rating %></b> -
        <% end %>
        <%= place.comments.last.message.truncate(50) %>
        <small><i><%= place.comments.last.user.username %></i></small>
      <% end %>

      </div>


    </article>
  </div>



<% end %>
</div>







