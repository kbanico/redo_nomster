<h1 class="text-center">EditCategory</h1>
<%= simple_form_for @category, html: {class: "form"},validate: true do |f| %>
  <%= f.input :name, label: false, placeholder: "Category name", input_html: {class: "form-control"} %>

  <br>
  <div class="col-6 offset-3">
    <%= f.submit "Update", class:"btn btn-login btn-block" %>
  </div>
<% end %>
