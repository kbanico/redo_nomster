<div class="panel-footer clearfix">
  <%= simple_form_for(Message.new, remote: true) do |f| %>
    <%= f.input :content, placeholder: "Say something...", autofocus: true, label: false, input_html: {class: "form-control", :rows => 1} %>
    <%= f.submit "Send", class: "btn btn-info btn-lg btn-block" %>

  <% end %>
</div>






