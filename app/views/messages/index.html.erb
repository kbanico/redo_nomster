<h1 class="display-4 text-center">HafaChat</h1> <br>
<div id="messages">
  <div id="messages-table">


   <div class="container">
      <div class="row form-group">
        <div class="col-12 offset-md-2 col-md-8">
            <div id="message-content" class="panel panel-primary">
                <div class="panel-heading">
                  <i class="fa fa-comment-o" aria-hidden="true"></i> Comments

                </div>

<div id="chat-messages">
  <% @messages.each do |message| %>

    <%= render "messages/messages", message: message %>

  <% end %>
</div>


  </div>
